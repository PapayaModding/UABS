<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="UABS.AvaloniaUI.App"
             RequestedThemeVariant="Default"
             xmlns:local="clr-namespace:UABS.AvaloniaUI"
             xmlns:vm="clr-namespace:UABS.ViewModel">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
    </Application.Styles>

    <Application.Resources>
        <FontFamily x:Key="LiberationSans">
            avares://UABS/Resources/Fonts#Liberation Sans
        </FontFamily>
        <local:FolderWindowIconConvertor x:Key="FolderWindowIconConvertor" />
        <local:AssetTypeIconConvertor x:Key="AssetTypeIconConvertor" />
    </Application.Resources>

    <Application.DataTemplates>
        <DataTemplate DataType="vm:FolderWindowViewModel">
            <local:FolderWindowPage />
        </DataTemplate>

        <!-- <DataTemplate DataType="vm:FileWindowViewModel">
            <local:FileWindowPage />
        </DataTemplate> -->
    </Application.DataTemplates>
</Application>
