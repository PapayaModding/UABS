<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UABS.AvaloniaUI"
             xmlns:vm="clr-namespace:UABS.ViewModel"
             xmlns:data="clr-namespace:UABS.Data"
             x:Class="UABS.AvaloniaUI.FileWindowPage"
             x:DataType="vm:FileWindowViewModel">

    <UserControl.Styles>
        <StyleInclude Source="avares://UABS/Script/AvaloniaUI/Styles/FileWindowDisplay.axaml"/>
    </UserControl.Styles>

    <UserControl.DataTemplates>
        <DataTemplate DataType="vm:ImagePreviewViewModel">
            <Image Source="{Binding ImagePath}" Stretch="Uniform"/>
        </DataTemplate>

        <DataTemplate DataType="vm:TextPreviewViewModel">
            <ScrollViewer>
                <TextBlock Text="{Binding TextContent}" TextWrapping="Wrap"/>
            </ScrollViewer>
        </DataTemplate>

        <DataTemplate DataType="vm:AudioPreviewViewModel">
            <TextBlock Text="Audio preview coming soon…"/>
        </DataTemplate>

        <DataTemplate DataType="vm:UnknownPreviewViewModel">
            <TextBlock Text="{Binding Reason}" Foreground="Gray"/>
        </DataTemplate>
    </UserControl.DataTemplates>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>  <!-- Left panel starts at 3/4 width -->
            <ColumnDefinition Width="Auto"/> <!-- GridSplitter -->
            <ColumnDefinition Width="*"/>   <!-- Right panel starts at 1/4 width -->
        </Grid.ColumnDefinitions>

        <!-- Left: DataGrid -->
        <Grid RowDefinitions="Auto,Auto,*">

            <!-- Sort Panel -->
            <local:FileWindowSortPanel Grid.Row="1"/>

            <!-- DataGrid -->
            <DataGrid x:Name="dataGrid"
                    Grid.Row="2"
                    ItemsSource="{Binding Assets}"
                    AutoGenerateColumns="False"
                    CanUserResizeColumns="True"
                    IsReadOnly="True"
                    HeadersVisibility="None"
                    RowHeight="40">

                <DataGrid.Styles>
                    <Style Selector="DataGrid:focus DataGridCell:current /template/ Grid#FocusVisual">
                        <Setter Property="IsVisible" Value="False"/>
                    </Style>

                    <Style Selector="DataGrid /template/ ScrollBar#PART_VerticalScrollbar">
                        <Setter Property="AllowAutoHide" Value="False"/>
                    </Style>		
                </DataGrid.Styles>

                <DataGrid.Columns>

                    <!-- Icon column -->
                    <DataGridTemplateColumn Width="48">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="data:AssetEntry">
                                <Border Height="36"
                                        Margin="8,2,0,0"
                                        CornerRadius="2,0,0,2"
                                        Background="{Binding RowBackground}">
                                    <Image Source="{Binding ClassID, Converter={StaticResource AssetTypeIconConvertor}}"
                                        Width="32"
                                        Height="32"
                                        VerticalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Name column -->
                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="data:AssetEntry">
                                <Border Height="36"
                                        Margin="0,2,26,0"
                                        CornerRadius="0,2,2,0"
                                        Background="{Binding RowBackground}">
                                    <TextBlock Text="{Binding Name}"
                                            VerticalAlignment="Center"
                                            Padding="6,0,0,0"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>

        </Grid>

        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1"
                    Width="4"
                    HorizontalAlignment="Stretch"
                    Background="#666"
                    ShowsPreview="True"/>

        <!-- Right: Stack -->
        <Grid Grid.Column="2" Margin="8" RowDefinitions="Auto,Auto,*">
            <!-- Top half displays -->
            <Grid Grid.Row="0"
                ColumnDefinitions="Auto,*"
                RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                RowSpacing="6">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Name" VerticalAlignment="Center" Margin="0,0,4,0" Classes="displayHint"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="---" IsReadOnly="True"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Path ID" VerticalAlignment="Center" Margin="0,0,4,0" Classes="displayHint"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="---" IsReadOnly="True"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="File ID" VerticalAlignment="Center" Margin="0,0,4,0" Classes="displayHint"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="---" IsReadOnly="True"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Size" VerticalAlignment="Center" Margin="0,0,4,0" Classes="displayHint"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="---" IsReadOnly="True"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Path" VerticalAlignment="Center" Margin="0,0,4,0" Classes="displayHint"/>
                <TextBox Grid.Row="4" Grid.Column="1" Text="---" IsReadOnly="True"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Memo" VerticalAlignment="Center" Margin="0,0,4,0" Classes="displayHint"/>
                <TextBox Grid.Row="5" Grid.Column="1" Text="---" IsReadOnly="True"/>
            </Grid>

            <!-- Bottom half displays -->
            <Grid Grid.Row="1" RowDefinitions="Auto,*" RowSpacing="6" Margin="0,8,0,0">
                <!-- Navigation Row -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="6">
                    <Button Content="◀" Width="28" Height="28"/>
                    <TextBlock Text="45 / 100" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Button Content="▶" Width="28" Height="28"/>
                </StackPanel>

                <!-- Asset Preview Row -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="32x26 (RGBA32)" HorizontalAlignment="Center"/>

                    <Border Grid.Row="1"
                            BorderBrush="#444"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="6"
                            HorizontalAlignment="Stretch"
                            Height="300">
                        <ContentControl Content="{Binding AssetPreview}" HorizontalAlignment="Stretch"/>
                    </Border>
                </Grid>
            </Grid>

        </Grid>

    </Grid>

</UserControl>
