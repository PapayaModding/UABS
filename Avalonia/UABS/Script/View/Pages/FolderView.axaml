<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UABS.Component"
             x:Class="UABS.Pages.FolderView">

    <UserControl.Styles>
        <StyleInclude Source="avares://UABS/Script/Styles/PathfieldStyle.axaml"/>
    </UserControl.Styles>

    <StackPanel>
        <!-- Path Field -->
        <TextBox Text="---" IsReadOnly="True" Classes="pathfieldTextBox"/>

        <!-- Sort Panel -->
        <local:FolderViewSortPanel />

        <!-- Other page content -->
        <Grid>
            <ScrollViewer>
                <StackPanel>
                    <local:FolderViewEntry Text="activity" />
                    <local:FolderViewEntry Text="aram" />
                    <local:FolderViewEntry Text="artifacts" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </StackPanel>

</UserControl>
